<div class="user-page d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div class="user-pro-box user-pro-box-s2">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="user-pro-info">
                                <div class="user-logo">
                                    <a href="#">
                                        <img src="images/extra-pages/logo-sm-white.png"
                                             srcset="images/extra-pages/logo-sm-white2x.png 2x" alt="icon">
                                    </a>
                                </div>
                                <div class="user-graphics">
                                    <img src="images/extra-pages/user-page-image-b.png" alt="user">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="user-pro-form">
                                <div class="tab-content" id="nav-tabContent">
                                    <h4 style="color: black" align="center">Create an account</h4>
                                    <div class="tab-pane fade show active" id="cont-signup" role="tabpanel">
                                        <span class="form-heading">Create an account to Join ICO Crypto community and buy ICOX Token.</span>
                                        <form class="signup-form" id="signUpForm">
s                                           <div id="server-error"></div>
                                            <div class="input-item">
                                                <div class="input-wrapper">
                                                    <input type="text" name="username" placeholder="Username" class="input-border-simple">
                                                    <em class="fas fa-user input-icon"></em>
                                                </div>
                                            </div>
                                            <div class="input-item">
                                                <div class="input-wrapper">
                                                    <input type="email" name="email" placeholder="Your Email" class="input-border-simple">
                                                    <em class="fas fa-envelope input-icon"></em>
                                                </div>
                                            </div>
                                            <div class="input-item">
                                                <div class="input-wrapper">
                                                    <input type="text" name="walletAddress" placeholder="Wallet Address" class="input-border-simple">
                                                    <em class="fas fa-wallet input-icon"></em>
                                                </div>
                                            </div>
                                            <div class="input-item">
                                                <div class="input-wrapper">
                                                    <input type="password" name="password" id="password" placeholder="Password" class="input-border-simple">
                                                    <em class="fas fa-key input-icon"></em>
                                                </div>
                                            </div>
                                            <div class="input-item">
                                                <div class="input-wrapper">
                                                    <input type="password" name="passwordConfirm" placeholder="Repeat Password" class="input-border-simple">
                                                    <em class="fas fa-key input-icon"></em>
                                                </div>
                                            </div>
                                            <div class="input-item">
                                                <div class="g-recaptcha"
                                                     data-callback="onCaptchaResponse"
                                                     data-sitekey="6Ld1H2AUAAAAAHTyyhkiNlJdTCR_d0EzuuKoCR09">
                                                </div>
                                                <input class="hiddenRecaptcha required"
                                                       type="hidden"
                                                       name="hiddenRecaptcha"
                                                       id="hiddenRecaptcha">
                                            </div>
                                            <div class="input-item text-left">
                                                <input name="aggrement" type="checkbox" id="aggrement"
                                                       class="input-checkbox">
                                                <label for="aggrement">I confrim that I have read, understand and agree
                                                    to the <a href="#">Privacy Policy</a> and <a href="#">Terms of
                                                        Use</a>.</label>
                                            </div>
                                            <div class="d-xl-flex justify-content-between align-items-center">
                                                <button class="btn btn-sm">Sign Up</button>
                                                <div class="gaps d-xl-none"></div>
                                                <span class="d-block">Don`t have an account? <a href="login"
                                                                                                class="simple-link">Sign in!</a></span>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
